{
  "name": "@gemcook/react-native-animated-scroll-view",
  "version": "0.2.2",
  "description": "A component that animates the header when the content is scrolled.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-animated-scroll-view.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "check": "biome check .",
    "prepare": "bob build",
    "release-patch": "release-it -- patch",
    "release-minor": "release-it -- minor",
    "release-major": "release-it -- major",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": ["react-native", "ios", "android"],
  "repository": "https://github.com/gemcook/react-native-animated-scroll-view",
  "author": "Gemcook Engineers <engineers@gemcook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gemcook/react-native-animated-scroll-view/issues"
  },
  "homepage": "https://github.com/gemcook/react-native-animated-scroll-view#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/config-conventional": "19.5.0",
    "@release-it/conventional-changelog": "8.0.2",
    "@types/jest": "29.5.14",
    "@types/react": "18.0.17",
    "@types/react-native": "0.73.0",
    "commitlint": "19.5.0",
    "husky": "4.3.8",
    "jest": "29.7.0",
    "metro-react-native-babel-preset": "0.77.0",
    "pod-install": "0.2.2",
    "prettier": "3.3.3",
    "react": "18.0.0",
    "react-native": "0.69.5",
    "react-native-builder-bob": "0.30.2",
    "release-it": "17.10.0",
    "typescript": "5.6.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn run check && yarn typescript"
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {},
  "volta": {
    "node": "20.18.0",
    "yarn": "1.22.22"
  }
}
