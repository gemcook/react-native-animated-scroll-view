{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "regexManagers:biomeVersions",
    ":pinAllExceptPeerDependencies"
  ],
  "labels": [
    "renovate"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "before 9am on Monday"
  ],
  "packageRules": [
    {
      "groupName": "all non-major dependencies",
      "updateTypes": [
        "patch",
        "minor"
      ],
      "groupSlug": "all-minor-patch",
      "excludePackageNames": [
        "react-native",
        "react"
      ]
    }
  ],
  "ignoreDeps": [
    "react-native",
    "react",
    "react-dom",
    "@types/react",
    "husky"
  ],
  "reviewers": [
    "@sosomuse"
  ]
}
